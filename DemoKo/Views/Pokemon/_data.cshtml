
<form class="form-horizontal">
    <fieldset>
        <legend>Catch a Pokemon</legend>
        
        <div data-bind="if: hasErrorMessage">
            <div class="alert alert-dismissible alert-danger">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong data-bind="text: errorMessage"></strong>
            </div>
        </div>

        <div class="form-group">
            <label for="inputNumero" class="col-lg-2 control-label">Número:</label>
            <div class="col-lg-10">
                <input type="number" class="form-control" id="inputNumbero" data-bind="value: number">
            </div>
        </div>

        <div class="form-group">
            <label for="inputNumero" class="col-lg-2 control-label">Imagen:</label>
            <div class="col-lg-10">

                <img data-bind="attr: {src:imageUrl}" />
                @*<span data-bind="text: imageUrl"></span>*@
            </div>
        </div>

        <div class="form-group">
            <label for="inputNombre" class="col-lg-2 control-label">Nombre:</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="inputNombre" data-bind="value: name">
            </div>
        </div>

        <div class="form-group">
            <label for="selectType" class="col-lg-2 control-label">Tipo de Pokémon:</label>
            <div class="col-lg-10">
                <select class="form-control" id="selectType" data-bind="options: availablesTypes, value: selectedType"></select>
            </div>
        </div>

        <div class="form-group">
            <label for="inputDescripcion" class="col-lg-2 control-label">Descripción:</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="inputDescripcion" data-bind="value: description"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label for="inputAtaque" class="col-lg-2 control-label">Ataque:</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="inputAtaque" data-bind="value: newAttackName">
                <button type="button" class="btn btn-primary" data-bind="click: addAttack">Añadir ataque</button>
            </div>

            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: attacks">
                    <tr>
                        <td data-bind="text: $index"></td>
                        <td data-bind="text: $data"></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="button" class="btn btn-primary" data-bind="click: send">Submit</button>
                <button type="reset" class="btn btn-default">Cancel</button>
            </div>
        </div>
</fieldset>
</form>